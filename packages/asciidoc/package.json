{
  "name": "@tp-lab/asciidoc",
  "version": "0.0.1",
  "description": "Version modifiée d'Asciidoctor.js avec HTML sémantique",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/tp-asciidoc.js",
  "types": "./dist/tp-asciidoc.d.ts",
  "exports": {
    ".": {
      "types": "./dist/tp-asciidoc.d.ts",
      "import": "./dist/tp-asciidoc.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest",
    "test:node": "vitest --project node",
    "test:browser": "vitest --project browser --browser",
    "test:coverage": "vitest run --coverage",
    "doc": "typedoc",
    "doc:full": "typedoc --entryPoints src --entryPointStrategy expand",
    "doc:serve": "pnpm doc:full && npx serve docs",
    "clean": "rm -rf dist docs"
  },
  "keywords": [
    "asciidoc",
    "asciidoctor",
    "html",
    "semantic"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@asciidoctor/core": "^3.0.4",
    "@shikijs/colorized-brackets": "^3.20.0",
    "@shikijs/transformers": "^3.20.0",
    "nanoid": "^5.1.6",
    "prettier": "^3.7.4",
    "shiki": "^3.20.0"
  },
  "devDependencies": {
    "@shikijs/core": "^3.20.0",
    "@shikijs/langs": "^3.20.0",
    "@shikijs/themes": "^3.20.0",
    "@shikijs/types": "^3.20.0",
    "@types/node": "^25.0.3",
    "@types/prettier": "^3.0.0",
    "@vitest/browser-playwright": "^4.0.16",
    "@vitest/coverage-istanbul": "4.0.16",
    "glob": "^13.0.0",
    "happy-dom": "^20.0.11",
    "playwright": "^1.57.0",
    "typedoc": "^0.28.15",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16"
  }
}